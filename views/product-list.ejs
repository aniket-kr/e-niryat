        } else {
            // If checkbox is unchecked, remove the selected item from the new div
            removeSelectedItem(checkbox.value);
        }
    }

    function appendSelectedItem(item) {
        // Create a new div element for the selected item
        var selectedItemsContainer = document.getElementById('selectedItems');
        var newItem = document.createElement('div');
        newItem.textContent = item;
        newItem.classList.add('selected-item');

        // Append the new div to the selected items container
        selectedItemsContainer.appendChild(newItem);
    }

    function removeSelectedItem(item) {
        // Remove the div element corresponding to the deselected item
        var selectedItemsContainer = document.getElementById('selectedItems');
        var selectedItems = selectedItemsContainer.querySelectorAll('.selected-item');
        selectedItems.forEach(function (selectedItem) {
            if (selectedItem.textContent === item) {
                selectedItemsContainer.removeChild(selectedItem);
            }
        });
    }
